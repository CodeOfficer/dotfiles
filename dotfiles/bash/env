export EDITOR="mate -w"
export AUTOFEATURE=true
export RSPEC=true

# jeweler defaults
export JEWELER_OPTS="--rspec --gemcutter"


# path
export PATH=.:~/bin:~/local/bin:$PATH # before
export PATH=/user/local/bin:$PATH
export MANPATH=~/local/man:$MANPATH

# mongodb
export PATH=/usr/local/mongodb/bin:$PATH # before

# macports
export PATH=/opt/local/bin:$PATH
export PATH=/opt/local/sbin:$PATH
export PATH=/opt/local/apache2/bin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH

# mysql
export PATH=/usr/local/mysql/bin:$PATH

#git
GIT=/usr/local/git/bin
export PATH=$GIT:/usr/local/bin:/usr/local/sbin:$PATH
export MANPATH=/usr/local/git/man:$MANPATH

# postgresql
export PATH=/Library/PostgreSQL/8.3/bin:$PATH

# -- start rip config -- #
RIPDIR=/Users/codeofficer/.rip
RUBYLIB="$RUBYLIB:$RIPDIR/active/lib"
PATH="$PATH:$RIPDIR/active/bin"
export RIPDIR RUBYLIB PATH
# -- end rip config -- #

# custom Terminal commands for readline
export INPUTRC=~/bin/dotfiles/inputrc

#gems
export GEM_PRIVATE_KEY='~/.gem/gem-private_key.pem'
